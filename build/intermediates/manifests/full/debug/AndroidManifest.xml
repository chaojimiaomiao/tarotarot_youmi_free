<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="irdc.gallary"
    android:versionCode="1"
    android:versionName="1.0.0" >

    <uses-sdk android:minSdkVersion="7" />

    <uses-permission android:name="android.permission.RESTART_PACKAGES" />
    <!-- 连接网络权限 ，用于请求广告(必须) -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- 读取手机基本信息权限，用于精确统计用户的机型等信息(必须) -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <!-- 读写sd卡的权限，用于缓存广告所用到的图片，节省流量 ，并可获得更好的用户体验(所有使用有米android 2.0版本以上sdk的应用都会共享缓存的图片) -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- 获取用户地理信息权限，用于帮助精确统计开发者的程序发布之后的用户分布情况 -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <!-- 读取网络信息权限，用于识别gprs网络的接入点的情况 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:icon="@drawable/icon"
        android:label="@string/app_name" >
        <activity
            android:name="irdc.gallary.ChooseMain"
            android:label="@string/app_name"
            android:screenOrientation="nosensor" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="irdc.gallary.gallary"
            android:screenOrientation="nosensor" />
        <activity
            android:name="irdc.gallary.SimIntro"
            android:screenOrientation="nosensor" />
        <activity
            android:name="irdc.gallary.Choose2"
            android:screenOrientation="nosensor" />
        <activity
            android:name="irdc.gallary.shuffle"
            android:screenOrientation="nosensor" />
        <activity
            android:name="irdc.gallary.editText"
            android:screenOrientation="nosensor" />
        <activity
            android:name="irdc.gallary.CardArray1"
            android:screenOrientation="nosensor" />
        <activity
            android:name="irdc.gallary.CardArray3"
            android:screenOrientation="nosensor" />
        <activity
            android:name="irdc.gallary.CardArray3"
            android:screenOrientation="nosensor" />
    </application>

</manifest>